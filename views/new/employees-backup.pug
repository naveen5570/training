  // Page content
  .container-fluid.mt--6
    .row(style="margin-top:100px;")
      .col
        .card
          // Card header
          .card-header.border-0
            h3.mb-0 Leads
          // Light table
          .table-responsive
            table.table.align-items-center.table-flush
              thead.thead-light
                tr
                  th.sort(scope='col' data-sort='name') S. No.
                  th.sort(scope='col' data-sort='budget') Full Name
                  th.sort(scope='col' data-sort='status') Email
                  th(scope='col') Mobile
                  th.sort(scope='col' data-sort='completion') Gender
                  th(scope='col') Profession
                  th(scope='col') Age
                  th(scope='col') Post-Code
                  th(scope='col') Father's State of Origin
                  th(scope='col') Facebook Name
                  th(scope='col') Instagram Name
                  th(scope='col') Address
                  th(scope='col') Actions
              tbody.list
               p(style="display:none;")- var i = 1;
               each employee in employeeData
                tr
                  th(scope='row')
                    .media.align-items-center
                      .media-body
                        span.name.mb-0.text-sm= i
                  th(scope='row')
                    .media.align-items-center
                      .media-body
                        span.name.mb-0.text-sm
                         = employee.firstName 
                         = employee.Surname
                  td.budget
                    =employee.email
                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.mobilephone
                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.gender
                      
                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.profession
                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.age
                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.postcode
                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.fatherorigin
                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.facebookname

                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.instagramname
                  td
                    span.badge.badge-dot.mr-4
                      
                      span.status= employee.homeaddress
                  td.text-right
                    .dropdown
                      a.btn.btn-sm.btn-icon-only.text-light(href='#' role='button' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
                        i.fas.fa-ellipsis-v
                      .dropdown-menu.dropdown-menu-right.dropdown-menu-arrow
                        a.dropdown-item(href="/admin/edit-employee/"+employee._id) Edit
                        a.dropdown-item(href="/admin/delete-employee/"+employee._id) Delete
                span(style="display:none;")=i=i+1    
