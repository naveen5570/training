script.
  var orderId ;
  $(document).ready(function(){
  var settings = {
  "url": "/create/orderId",
  "method": "POST",
  "timeout": 0,
  "headers": {
  "Content-Type": "application/json"
  },
  "data": JSON.stringify({
  "amount": "#{price}"*100,
  
