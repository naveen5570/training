include inc/header
each course in courseData
 section#sub-header
  .container
    .row
      .col-md-12.text-center
       
        h1= course.name
        //p.lead= vendor.description
          
    // End row
    
  // End container
  .divider_top
 section#main_content
  .container
    ol.breadcrumb
      li
        a(href='/') Home
      li.active= course.name
    .row
      .col-md-8
        h2= course.name
        p= course.description
        div(class="tabs")
         a(href="#schedules") Schedules
         a(href="#details") Course Details 
         a(href="#target_audience") Target Audience
         a(href="#related") Related
        h3(style="padding-bottom:20px;" id="schedules") Schedules
        
        .row#schedules
         - var i = 0
         each schedule in course.schedules
          .col-md-4
           a(href="/purchase/id="+course._id+"&schedule="+i)
            .schedules
             h4
              | Date: #{schedule.startdate} - #{schedule.enddate}
              br 
              | Time:  #{schedule.starttime} - #{schedule.endtime}
          -i++
        h3(style="padding-bottom:20px;" id="details") Course Details
        = course.course_detail
        h3(style="padding-bottom:20px;" id="target_audience") Target Audience
        = course.target_audience
        h3(style="padding-bottom:20px;" id="related") Related
        = course.related

          
      aside.col-md-4
        .box_style_1(style="text-align:center; border:0px; box-shadow:inset 0 0 0 0px #e0e5e9;")
          h4(style="text-align:center; border:0")= 'Price: â‚¹'+ course.price
          a(class="enroll_button" href="#schedules") Enroll Now

        .box_style_1(style="text-align:center;")
          h4 Request For More Information
          form(method="post" class="form-group request_form" action="/request-form")
           input(type="text" placeholder="Full Name*" name="full_name" required)
           input(type="email" placeholder="Email Address*" name="email" required)
           input(type="text" placeholder="Phone Number*" name="phone" required)
           input(type="text" placeholder="State*" name="state" required)
           input(type="text" placeholder="Job Title*" name="job_title" required)
           input(type="text" placeholder="Company Name*" name="company" required)
           input(type="submit" name="Submit" value="Submit" class="btn btn-success")
          
              
              
        
          
          
        
      // End col-md-4
    // End row
  // End container
include inc/footer
